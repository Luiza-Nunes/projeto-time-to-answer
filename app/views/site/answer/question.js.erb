var button = document.getElementById('submit_<%= @answer.question_id %>')

button.classList.remove('btn-default');
button.classList.remove('btn-success');
button.classList.remove('btn-danger');

if (<%= @answer.correct %>) {
  button.classList.add('btn-success')
  $.bootstrapGrowl("Você acertou!", {
    type: "success",
    align: "right",
    allow_dismiss: true,
    stackup_spacing: 10
  });
} else {
  button.classList.add('btn-danger')
  $.bootstrapGrowl("Você errou!", {
    type: "danger",
    align: "right",
    allow_dismiss: true,
    stackup_spacing: 10
  });
}